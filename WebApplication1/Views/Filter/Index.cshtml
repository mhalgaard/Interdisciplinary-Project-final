                <input type="checkbox">Intaliansk
                <span class="checkmark"></span>
            </label>
            <label class="check-container">
                <input type="checkbox">Japansk
                <span class="checkmark"></span>
            </label>
            <label class="check-container">
                <input type="checkbox">Kinesisk
                <span class="checkmark"></span>
            </label>
            <label class="check-container">
                <input type="checkbox">Sushi
                <span class="checkmark"></span>
            </label>
            <label class="check-container">
                <input type="checkbox">Thailandsk
                <span class="checkmark"></span>
