            <label class="check-container">
                <input type="checkbox">Cafémad
                <span class="checkmark"></span>
            </label>
            <p><u>Vis alle køkkentyper</u></p>
        </section>
        <section class="pris filter-sec">
            <h2>Pris:</h2>
            <label class="check-container">
                <input type="checkbox">$
