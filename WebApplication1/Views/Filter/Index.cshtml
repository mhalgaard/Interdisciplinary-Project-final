            <h2>Afstand i km:</h2>
            <!--https://codepen.io/thehonestape/pen/yjlGi *ved ikke om nogle af div kan skiftes ud-->
            <div class="range-container">
                <div class="slider">
                    <input type="range" min="2" step="2" value="1" max="20" onchange="rangevalue.value=value" />
                    <output id="rangevalue">2</output>
                </div>
            </div>
        </section>
        <section class="typer filter-sec">
            <h2>Køkkentyper:</h2>
